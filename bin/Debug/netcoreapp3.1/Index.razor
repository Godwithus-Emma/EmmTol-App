@page "/"

    <main class="index">
        <!-- <div class="header"> -->
        <div class="header-image">
            <span class="@($"use-fade {(showWise?"fade-in":"")}")">
                @GetWiseWord()
            </span>
        </div>
        <!-- </div> -->
        <div class="container">
            <h4 class="plan-heading">@Heading</h4>
            <div class="row">
                @foreach (var n in Networks) {
                    <div class="col-md-3">
                        <div class="mtn-sme" id="pricing-box">
                            <div class="text">
                                <h4>@n</h4>
                                <div>
                                    <table>
                                        <tr>
                                            @foreach (var plan in plans[n] )
                                            {
                                            <td style="text-align: right;">@plan.DataVolume</td>
                                            <td style="text-align: left;">@plan.Amount</td>
                                            }
                                        </tr>
                                    </table>

                                </div>
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>

    </main>
    <app-master></app-master>
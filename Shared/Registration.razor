@page "/Register"
<main>
    <div class="form-wrapper">
        <div class="content">
            <span>REGISTRATION FORM</span>
            <EditForm Model="new { }">

                <input name="email" class="input" id="email" type="text" @bind-value="Email" placeholder="Enter your email">
                <input type="password" name="password" @bind-value="InitialPassword" placeholder="Enter your password">
                <input type="password" name="re-password" @bind-value="Password" placeholder="Re-type your password">
                <button class="submit" type="submit" @onclick="NewUser"><strong>REGISTER</strong></button>
            </EditForm>
            <hr>
            <Notice @ref="_notice"></Notice>
            <div class="other-content">
                <span><NavLink href="/Login">Already have an Account? Login!</NavLink></span>
            </div>
        </div>
    </div>
</main>






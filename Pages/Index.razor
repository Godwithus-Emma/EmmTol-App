 @page "/"

<main class="index">
    <div class="header">
        <div class="header-image">
            <span class="@($"use-fade {(showWise?"fade-in":"")}")">
                @GetWiseWord()
            </span>
        </div>
    </div>
    <div class="container">
        <h4 class="plan-heading">@Heading</h4>
        <div class="row">
            @foreach (var n in Networks)
            {
                <div class="col-md-3">
                    <div class="mtn-sme" id="pricing-box">
                        <div class="text">
                            <h4>@n</h4>
                            <div>
                                <table>
                                    <tr>
                                        @foreach (var plan in Plans[n])
                                        {
                                        <tr>
                                            <td style="text-align: right;">@plan.DataVolume</td>
                                            <td style="text-align: left;">N @plan.Amount</td>
                                        </tr>
                                         }
                                     </tr>
                                    </table>


                                </div>
                            </div>
                        </div>

                    </div>
                }
        </div>
    </div>
    <div class="footer">
        @*<span>All Rights Reserved. EmmTol Limited </span>*@
    </div>
</main>
<AppMaster></AppMaster>